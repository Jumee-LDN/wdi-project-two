<h2>Add Your Review</h2>
<hr>
<form action="/restaurants" method="post" class="columns">
  <div class="column" id="restaurant-info-box">
    <div class="field">
      <label class="label">Restaurant Name</label>
      <div class="control">
        <input class="input" name="name" placeholder="Yummy Zone">
      </div>
    </div>
    <div class="field">
      <label class="label">City</label>
      <div class="control">
        <input class="input" name="city" placeholder="London">
      </div>
    </div>
    <div class="field">
      <label class="label">Address</label>
      <div class="control">
        <input class="input" name="address" placeholder="5 London Road, London, EC1 5RU">
      </div>
    </div>
    <div class="field">
      <label class="label">Image url</label>
      <div class="control">
        <input class="input" name="images" placeholder="https://www.restaurant.com/images.jpg">
      </div>
    </div>
  </div>

  <div class="column" id="restaurant-review-box">
    <div class="field" id="comment-input-box">
      <textarea name="comment" rows="5" cols="80" class= "textarea is-primary" placeholder="I love this restaurant!"></textarea>
      <input type="text" name="user" value="<%= locals.currentUser._id %>" hidden>
    </div>
    <div class="field" id="rating-input-box">
      <input class="input" type="number" name="rating" min="0" max="10" placeholder="Your Rate e.g.7">
    </div>
    <div class="field" id="submit-comment-btns">
      <div class="control" id="submit-btn">
        <button class="button is-link">Submit</button>
      </div>
    </div>
  </div>
</form>
